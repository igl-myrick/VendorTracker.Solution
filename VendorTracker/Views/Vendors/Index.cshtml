@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>Vendors</h1>
@if (Model.Count == 0)
{
  <p>No vendors have been added yet.</p>
}

@foreach (Vendor vendor in Model)
{
  <h4><a href="/vendors/@vendor.Id">@vendor.Name</a></h4>
}

<p><a href="/vendors/new">Add a new vendor</a></p>
<p><a href="/">Back home</a></p>
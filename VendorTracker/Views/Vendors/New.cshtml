@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>Add a new vendor</h1>

<form action="/vendors" method="post">
  <label for="vendorName">Vendor name</label>
  <input id="vendorName" name="vendorName" type="text"><br>
  <label for="vendorDescription">Description of vendor</label>
  <input id="vendorDescription" name="vendorDescription" type="text">
  <button type="submit">Submit</button>
</form>

<p><a href="/vendors">Back to vendor listing</a></p>
<p><a href="/">Back home</a></p>
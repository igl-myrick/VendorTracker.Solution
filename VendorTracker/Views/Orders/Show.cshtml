@{
  Layout = "_Layout";
}

<h1>Order details</h1>

<p>Associated vendor: @Model["vendor"].Name</p>
<p>Title: @Model["order"].Title</p>
<p>Description: @Model["order"].Description</p>
<p>Price: @Model["order"].Price</p>
<p>Date ordered: @Model["order"].Date</p>

<p><a href="/vendors/@Model["vendor"].Id/orders/new">Add another order from @Model["vendor"].Name</a></p>
<p><a href="/vendors">View all vendors</a></p>